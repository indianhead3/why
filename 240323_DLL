int main()
{
	Init();
	cout << Size() << endl;
	cout << Front() << endl;
	AddFront(1);
	AddFront(2);
	AddFront(3);
	AddFront(4);
	AddFront(5);
	Print();
	cout << Size() << endl;
	cout << Front() << endl;
	////RemoveFront();
